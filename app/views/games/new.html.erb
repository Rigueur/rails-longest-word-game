<div class="container">
  <h1>New game</h1>
  <div class="d-flex align-content-center mb-3">
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[0]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[1]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[2]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[3]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[4]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[5]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[6]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[7]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[8]%>
    </div>
    <div class="d-flex align-items-center justify-content-center bg-primary text-white m-1 border fw-bold shadow" style="width: 40px; height: 40px;">
      <%=@letters[9]%>
    </div>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="score" method="post" data-turbo="false">
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word" placeholder="Your word" aria-label="Your word" aria-describedby="button-submit">
      <button class="btn btn-outline-secondary" type="submit" id="button-submit">Play</button>
    </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
